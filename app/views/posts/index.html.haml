%p#notice= notice
%h1 Посты
%table
  %thead
    %tr
      %th Title
      %th Photo
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= link_to(image_tag(post.photo.thumb.url, alt: 'Image'), post, target: '_blank') if post.photo?
        %td= post.description
        %td= link_to 'Просмотр', post
        - if policy(post).edit?
          %td= link_to 'Редактировать', edit_post_path(post)
        - if policy(post).destroy?
          %td= link_to 'Удалить', post, method: :delete, data: { confirm: 'Are you sure?' }
%br/
- if policy(@posts).create?
  = link_to 'Создать новый пост', new_post_path
