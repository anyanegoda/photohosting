<br>
<% @users.each do |user| %>
  <%= image_tag(user.avatar.thumb.url, alt: 'Avatar') if user.avatar? %>
  <%= link_to(user.name, user) %>
  <%= link_to(user.surname, user) %>
  <%= user.photos.count %> фото
  <% user.photos.each do |photo| %>
    <%= link_to(image_tag(photo.image.small_user_thumb.url, alt: 'Image'), photo, target: '_blank') if photo.image? %>
  <% end %>
  <br>
  <% if policy(user).destroy? %>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <% if policy(user).edit? %>
    <%= link_to 'Edit',  edit_user_registration_path(@user) %> |
  <% end %>
<% end %>


